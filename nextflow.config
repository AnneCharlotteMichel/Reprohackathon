singularity{
    enabled=true
}

process  {
    withName: getFastq  {
        container="docker://evolbioinfo/sratoolkit:v2.5.7"
    }
    
    withName: getChr {
        container = "docker://evolbioinfo/ubuntu:v16.04"
    }

    withName: genomeIndex {
        container = "docker://evolbioinfo/star:v2.7.6a"
        cpus = 16
    }

    withName: genomeAnnot {
        container = "docker://evolbioinfo/ubuntu:v16.04"
    }

    withName: mapFastq {
        container = "docker://evolbioinfo/star:v2.7.6a"
        container = "docker://evolbioinfo/samtools:v1.11"
        cpus = 2
    }
}   




